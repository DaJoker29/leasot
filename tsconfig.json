{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/types"
  ]
}
